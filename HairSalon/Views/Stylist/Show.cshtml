
<h3>Here are all the best clients from this stylist:</h3>

<ol>
@foreach (var client in @Model["clients"])
{
  <li><a href='/stylists/@Model["stylist"].GetId()/clients/@client.GetId()'>@client.GetName()</a></li>
}
</ol>

<form action='/stylists/@Model["stylist"].GetId()/clients/new' method='get'>
<button type="submit">Add a new client</button>
</form>

<form action='/stylists/@Model["stylist"].GetId()/clients/clear' method='post'>
<button type="submit">Delete all clients</button>
</form>

<form action='/stylists/@Model["stylist"].GetId()/delete' method='get'>
<button type="submit">Delete this stylist</button>
</form>

<form action='/stylists' method='get'>
<button type="submit">View all stylists</button>
</form>

<form action='/' method='get'>
<button type="submit">Home</button>
</form>
